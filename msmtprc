# Set default values for all following accounts.
defaults
auth           on
auto_from      on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        fedor
host           smtp.gmail.com
tls            on
tls_certcheck  off
auth           on
port           587
from           fedor.shamakhov@gmail.com
user           fedor.shamakhov@gmail.com
passwordeval   gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp-fedor.gpg

account        electron
host           smtp.gmail.com
tls            on
tls_certcheck  off
auth           on
port           587
from           electron160zeptocoulomb@gmail.com
user           electron160zeptocoulomb@gmail.com
passwordeval   gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp-electron.gpg

# Yandex
account        yandex
host           smtp.yandex.ru
tls            on
tls_certcheck  off
auth           on
port           465
from           shamakhov.fyodor@yandex.ru
user           shamakhov.fyodor@yandex.ru
passwordeval   gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp-yandex.gpg

# Set a default account
account default : electron